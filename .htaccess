# LokAlert - Apache Configuration
# For InfinityFree and other Apache servers

# Enable URL rewriting
RewriteEngine On

# Prioritize .html files over .php (index.html before index.php)
DirectoryIndex index.html index.php

# Handle PHP files
AddHandler application/x-httpd-php .php

# Prevent directory listing
Options -Indexes

# Protect includes folder from direct access
<FilesMatch "^(config|credentials)\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Error pages
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# PHP settings (if allowed by host)
<IfModule mod_php7.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
</IfModule>

<IfModule mod_php.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
</IfModule>
